@model AspNetCoreWorld.ViewModels.ContactViewModel
@{
    ViewBag.Title = "About page";
}

@section scripts {
<script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
}

<h2>Contacts Me</h2>
<div class="row">
    <div class=" col-md-6 col-md-offset-3">
        <form method="post" class="form-group">
            
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name"  class="form-control" />
                    <span asp-validation-for="Name" class="text-muted"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-muted"></span>
                </div>
                <div class="form-group">
                    <label >Form</label>
                    <textarea cols="40" rows="4" class="form-control">

                    </textarea>
                </div>
            <div>
                <a asp-controller="#" asp-action="#" class="btn btn-default ">Cancel</a>
                <input type="submit" value="Send Message" class="btn btn-info " />
            </div>
        </form>
    </div>
</div>